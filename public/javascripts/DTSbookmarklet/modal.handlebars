<div class="bd">
<div class="modal fade ontop" id="DTSModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Data Tilling Service</h4>
      </div>
      <div class="modal-body">
          <div class="row dts-top-buffer">
            <div class="col-md-6">
              <button type="submit" class="btn btn-primary" id="DTSListImages">List Images</button>
              <a class="btn btn-primary dts-has-spinner" id="DTSIndexImages">
                <span class="dts-spinner"><i class="glyphicon glyphicon-refresh glyphicon-spin"></i></span>
                Index Images
              </a>
            </div>
            <div class="col-md-6">
              <span class="label label-danger pull-right" id="DTSFailedExtractions">0</span>
              <span class="label label-success pull-right" id="DTSSuccessfulExtractions">0</span>
              <span class="label label-primary pull-right" id="DTSImageFound">0</span>
            </div>
          </div>
          <div class="row dts-top-buffer">
            <div class="col-md-8">
              <label class="sr-only" for="DTSquery">Query</label>
              <input type="text" class="form-control" id="DTSquery" placeholder="Search query">
            </div>
            <div class="col-md-4">
              <button type="submit" class="btn btn-default" id="DTSSearch">Search</button>
            </div>
          </div>
          <div class="row dts-top-buffer">
            <div class="col-md-12">
              <h4>Search Results</h4>
            </div>
          </div>
          <div class="row dts-top-buffer">
            <div class="col-md-12">
              <div class="DTSSearchResultsScroll">
                <table class="table" id="DTSSearchResults">
                  <tbody></tbody>
                  </table>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <a href="http://browndog.ncsa.illinois.edu">
          <img src="{{base_url}}/browndog-small.png" width="50px" class="pull-left">
        </a>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</div>