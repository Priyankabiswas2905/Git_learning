<div class="row">
    <form class="form-horizontal col-md-12">
        <div class="form-group">
            <label for="field-value" class="col-sm-2 control-label" title="{{field_id}}">
                <strong>{{field_label}}</strong>
            </label>
            <div class="col-sm-10">
                <select class="field-value" id="field-value" data-id="{{field_id}}" data-type="list" data-label="{{field_label}}">
                    <option value=""></option>
                    {{#each options}}<option value="{{this}}">{{this}}</option>{{/each}}
                </select>
            </div>
        </div>

        {{#if field_description}}
        <div class="row form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{field_description}}
            </div>
        </div>
        {{/if}}
    </form>
</div>